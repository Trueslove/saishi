
.home-swiper {
    border-radius: 12rpx 12rpx 12rpx 12rpx;
    height: 300rpx;

    position: relative;
    bottom: 16rpx;
  }
  
  .home-swiper swiper {
    height: 100%;
  }
  
  .home-swiper swiper-item {
    width: 100%;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
  }
  
  .home-swiper swiper-item image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
  }
  
  .home-swiper .indicator {
    position: absolute;
    bottom: 16rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
  }
  
  .home-swiper .indicator .indicator-item {
    width: 8rpx;
    height: 4rpx;
    margin-right: 4rpx;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.22);
  }
  
  .home-swiper .indicator .current {
    width: 14rpx;
    background: #fff;
  }