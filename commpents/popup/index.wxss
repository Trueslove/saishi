.popup-con {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 100;
}

.popup-wrap {
    background: #fff;
    border-radius: 36rpx;
    min-width: 30%;
    max-height: 992rpx;
    overflow-y: auto;
}
.popup-con-wrap {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;

}
.popup-con .close {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: -90rpx;
    left: 50%;
    transform: translateX(-50%);
    
}

.popup-con .close image {
    width: 100%;
    height: 100%;
}