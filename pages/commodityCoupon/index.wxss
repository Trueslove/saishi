.coupon-page {
    padding-bottom: 160rpx;
}

.coupon-page .coupon-list {
    padding: 0 22rpx;
}

.coupon-page .coupon-list .coupon-item {
    display: flex;
    padding: 10rpx;
    border-radius: 14rpx;
    background: #FFFFFF;
    box-shadow: 0px 2px 8px 2px rgba(0, 0, 0, 0.12);
    align-items: center;
    margin-bottom: 16rpx;

}

.coupon-page .coupon-list .coupon-item:first-of-type {
    margin-top: 16rpx;
}

.coupon-page .coupon-list .coupon-item .money {
    width: 190rpx;
    height: 120rpx;
    position: relative;
    display: flex;
    padding-top: 24rpx;
    padding-left: 30rpx;
    flex-direction: column;

}

.coupon-page .coupon-list .coupon-item .money image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 0;
}

.coupon-page .coupon-list .coupon-item .money .price {
    z-index: 1;
    position: relative;
    display: flex;
    align-items: flex-start;
    margin-left: -8rpx;
}

.coupon-page .coupon-list .coupon-item .money .price text:first-of-type {
    font-size: 28rpx;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 24rpx;
}

.coupon-page .coupon-list .coupon-item .money .price text:last-of-type {
    font-size: 52rpx;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 38rpx;
}

.coupon-page .coupon-list .coupon-item .money .p {
    position: relative;
    z-index: 1;
    font-size: 18rpx;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 18rpx;
    margin-top: 10rpx;
    text-align: left;
}

.coupon-page .coupon-list .coupon-item .coupon-info {
    display: flex;

    flex-direction: column;
    flex: 1;
    margin-left: 8rpx;
}

.coupon-page .coupon-list .coupon-item .coupon-info .title {
    font-size: 28rpx;
    font-weight: 500;
    color: #464B52;
    line-height: 28rpx;
    text-align: left;
}

.coupon-page .coupon-list .coupon-item .coupon-info .date {
    font-size: 18rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 18rpx;
    text-align: left;
    margin-top: 16rpx;

}

.coupon-page .coupon-list .coupon-item .coupon-info .msg {
    font-size: 18rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 18rpx;
    text-align: left;
    margin-top: 18rpx;
}

.coupon-page .coupon-list .coupon-item button {
    background: #FF5041;
    color: #fff;
    font-size: 20rpx;
    font-weight: 500;
    padding: 0;
    border-radius: 50rpx;
    width: 128rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
}

.coupon-page .coupon-list .coupon-item .has {
    background: #F5F5F5;
    color: #FF5041;
}


.coupon-page .action {
    display: flex;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    box-shadow: 0px 2px 8px 2px rgba(0, 0, 0, 0.15);
    padding: 0 20rpx;
    padding-top: 16rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    /*兼容 IOS<11.2*/
    padding-bottom: env(safe-area-inset-bottom);
}

.coupon-page .action .left {
    display: flex;
    align-items: center;
    flex: 1;
}

.coupon-page .action .left text {
    font-size: 26rpx;
    font-weight: 500;
    color: #464B52;
    line-height: 26rpx;

}

.coupon-page .action .left text:last-of-type {
    font-size: 36rpx;
    font-weight: bold;
    color: #FF5041;
    line-height: 36rpx;
}

.coupon-page .action .null {
    background: #F5F5F5;
    color: #BEBEBE;

}

.coupon-page .action button {
    height: 68rpx;
    line-height: 68rpx;
    background: #FF5041;
    font-size: 26rpx;
    color: #fff;
    font-weight: 500;
    width: 180rpx;
    padding: 0;
}



.satisfy {
    font-size: 22rpx;
    font-family: PingFang SC-Medium, PingFang SC;
    font-weight: 500;
    color: #8A8A8A;
    line-height: 32rpx;
    width: 128rpx;
    text-align: center;
    padding: 0 20rpx;
}


.dontCoupon {
    filter: opacity(0.5);
}
.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
}
.placeholder text {
    margin: 36rpx 0;
    font-size: 22rpx;
    font-weight: 400;
    color: #8A8A8A;
    line-height: 22rpx;
    text-align: center;
    position: relative;
}

.placeholder text::before,
.placeholder text::after {
    content: '';
    position: absolute;
    left: calc(-210rpx + -12rpx);
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 210rpx;
    height: 2rpx;
    background: #BEBEBE;
}

.placeholder text::after {
    left: unset;
    right: calc(-210rpx + -12rpx);

}


.coupon-item .select {
    padding-right: 30rpx;

}

.coupon-item .select  image {
    width: 40rpx;
    height: 40rpx;
}
