.user-competition-page {
    min-height: 100vh;
    background: #F8F8F8;
}

.user-wrap {
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    padding-top: 48rpx;
    position: relative;
    z-index: 0;
}

.user-bg {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    height: 260rpx;
    width: 100%;
}

.user-info {
    display: flex;
    align-items: center;
    flex: 1;
}

.user-info .avatar {
    width: 84rpx;
    height: 84rpx;
}

.user-info .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50rpx;
}


.user-info .user-name {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;

}

.user-info .user-name text:first-of-type {
    font-size: 34rpx;
    color: #121314;
    font-weight: 500;
    font-family: PingFang SC-Medium, PingFang SC;
}

.user-wrap .text {
    background: #fff;
    padding: 0 24rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    border-radius: 50rpx;

}

.user-wrap .text image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 6rpx;
}

.user-wrap .text {
    color: #000;
    font-size: 28rpx;
    font-weight: 500;
    font-family: PingFang SC-Medium, PingFang SC;
}

.user-wrap .text text {
    color: var(--themeColor);
}

.competition-list {
    background: #fff;
    position: relative;
    z-index: 2;
    margin: 0 24rpx;
    margin-top: 52rpx;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

.competition-list .title {
    padding: 16rpx 20rpx;
    display: flex;
    align-items: center;
    padding-bottom: 14rpx;
}

.competition-list .title image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
}


.competition-list .title text {
    color: #121314;
    font-size: 24rpx;
    font-weight: 400;
    font-family: PingFang SC-Regular, PingFang SC;
}

.competition-list .title text text {
    color: var(--themeColor);
}


.competition-list .item-wrap {
    box-shadow: 0px -2px 8px 2px rgba(0,0,0,0.06);
    border-radius: 16rpx 16rpx 0 0;

}
.competition-list .item {
    display: flex;
    padding: 20rpx 0;
    margin: 0 20rpx;
    border-bottom: 1px solid #E8E8E8;
}



.competition-list .item .cover {
    width: 264rpx;
    height: 148rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.competition-list .item .cover image {
    width: 100%;
    height: 100%;
}

.competition-list .item .info {
    display: flex;
    flex-direction: column;

    flex: 1;
}

.competition-list .item .info-title {
    color: #121314;
    font-size: 28rpx;
    font-family: PingFang SC-Medium, PingFang SC;
    font-weight: 500;
}

.competition-list .item text {
    color: #73777E;
    font-size: 20rpx;
    font-family: PingFang SC-Regular, PingFang SC;
    font-weight: 400;
}

.competition-list .item .info .work {
    flex: 1;
}

.competition-list .item .info .bottom {
    display: flex;
    align-items: center;
    padding-bottom: 8rpx;
}

.competition-list .item .info .bottom text {
    flex: 1;
    display: inline-block;
}

.competition-list .item .info .bottom .a {
    color: var(--themeColor);
    font-family: PingFang SC-Regular, PingFang SC;
    font-weight: 400;
    font-size: 20rpx;
}