.commodity-submit-page {
    line-height: 48x;
    background: #FFDDDB;
    padding-bottom: 90rpx;
}



.commodity-submit-page .tips {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    font-weight: 500;
    color: #FF5041;
}

.commodity-submit-page .address {
    display: flex;
    align-items: center;
    padding: 26rpx 20rpx;
    background: #fff;
    border-bottom: 20rpx solid #F8F8F8;
}

.commodity-submit-page .address .address-img {
    width: 68rpx;
    height: 68rpx;
}

.commodity-submit-page .address .arrow {
    width: 14rpx;
    height: 24rpx;
}

.commodity-submit-page .address .info {
    margin-left: 20rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.commodity-submit-page .address .info .info-top {
    display: flex;
    align-items: center;
    margin-bottom: 18rpx;
}

.commodity-submit-page .address .info text {
    font-size: 22rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 22rpx;

}

.commodity-submit-page .address .info .info-top text {
    font-size: 28rpx;
    font-weight: 500;
    color: #292A3D;
    line-height: 28rpx;
}

.commodity-submit-page .address .info .info-top .label {
    width: 48rpx;
    height: 28rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 20rpx;
    background: #FF5041;
    text-align: center;
    border-radius: 4rpx;
    line-height: 28rpx;
    margin-right: 12rpx;
}


.commodity-submit-page .detail {
    background: #fff;
    padding: 20rpx;
    border-bottom: 20rpx solid #f5f5f5;
}

.commodity-submit-page .detail .title {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1px solid rgba(29, 30, 44, 0.15);

}

.commodity-submit-page .detail .title .dp {
    width: 32rpx;
    height: 30rpx;
}

.commodity-submit-page .detail .title text {
    font-size: 26rpx;
    font-weight: 500;
    color: #292A3D;
    line-height: 26rpx;
    padding: 0 6rpx;
}

.commodity-submit-page .detail .title .arrow {
    width: 14rpx;
    height: 24rpx;
}


.commodity-submit-page .detail-commodity {
    display: flex;
    border-bottom: 1px solid #DEDEDE;
    padding: 20rpx 0;
}

.commodity-submit-page .detail-commodity image {
    width: 170rpx;
    height: 170rpx;
    border-radius: 14rpx;
}

.commodity-submit-page .detail-commodity .info-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.commodity-submit-page .detail-commodity .info-right text:nth-of-type(2) {
    margin-top: 12rpx;
    font-size: 22rpx;
    line-height: 22rpx;
}

.commodity-submit-page .detail-commodity .info-right text {
    font-size: 28rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 40rpx;
}

.commodity-submit-page .detail-commodity .info-right .price {
    font-size: 24rpx;
    font-weight: bold;
    color: #8A8A8A;
    line-height: 24rpx;
    margin-top: 26rpx;
    text-decoration: line-through;
}

.commodity-submit-page .detail-commodity .info-right .bottom {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
}

.commodity-submit-page .detail-commodity .info-right .bottom .price-new {
    font-size: 30rpx;
    font-weight: bold;
    color: #292A3D;
    line-height: 28rpx;
    display: flex;
    align-items: center;
    flex: 1;
}

.commodity-submit-page .detail-commodity .info-right .bottom .price-new image {
    width: 52rpx;
    height: 26rpx;
}

.commodity-submit-page .detail-commodity .info-right .bottom .num {
    display: flex;
    align-items: center;
}

.commodity-submit-page .detail-commodity .info-right .bottom .num button {
    width: 40rpx;
    height: 40rpx;
    background: #F5F5F5;
    line-height: 40rpx;
    padding: 0;
    border-radius: 2rpx;

}

.commodity-submit-page .detail-commodity .info-right .bottom .num text {
    width: 72rpx;
    height: 40rpx;
    background: rgba(245, 245, 245, 1);
    text-align: center;
}

.commodity-submit-page .detail-commodity .info-right .bottom .num button:first-of-type {
    margin-right: 10rpx;
}

.commodity-submit-page .detail-commodity .info-right .bottom .num button:last-of-type {
    margin-left: 10rpx;
}


.commodity-submit-page .detail .label-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 16rpx;
}

.commodity-submit-page .detail .label-wrap .label {
    background: #f5f5f5;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 18rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 18rpx;
    padding: 6rpx;
    border-radius: 6rpx;
}

.commodity-submit-page .detail .label-wrap .label:last-of-type {
    margin-left: 12rpx;
}

.commodity-submit-page .list-w {
    display: flex;
    flex-direction: column;
    background: #fff;
}

.commodity-submit-page .list-w .item-w {
    display: flex;
    align-items: center;
    padding: 24rpx 20rpx;
    position: relative;
}

.commodity-submit-page .list-w .item-w text:first-of-type {
    font-size: 24rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 24rpx;
    display: flex;
    align-items: center;
}

.commodity-submit-page .list-w .item-w .right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    padding-right: 20rpx;
}

.commodity-submit-page .list-w .item-w .right text {
    font-size: 24rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 24rpx;
}

.commodity-submit-page .list-w .item-w .right .red {
    color: #FF5041;
}

.commodity-submit-page .list-w .item-w .blod {
    font-weight: bold !important;
}

.commodity-submit-page .list-w .item-w .arrow {
    position: absolute;
    right: 16rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 24rpx;
    height: 24rpx;
}

.commodity-submit-page .list-w .item-w .size {
    font-size: 36rpx !important;
}


.border-bottom-20 {
    border-bottom: 20rpx solid #f5f5f5;
}

.input-item {
    padding: 0 20rpx;
    padding-top: 22rpx;
    padding-bottom: 24rpx;

}

.input-item text {
    font-size: 24rpx;
    font-weight: 400;
    color: #464B52;
    line-height: 24rpx;
    padding-bottom: 16rpx;
}

.input-item input {
    height: 64rpx;
    line-height: 64rpx;
    background: #F5F5F5;
    border-radius: 10rpx;
    padding-left: 14rpx;
}

.commodity-submit-page .action {
    z-index: 10;
    display: flex;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    box-shadow: 0px 2px 8px 2px rgba(0, 0, 0, 0.15);
    padding: 0 20rpx;
    padding-top: 16rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    /*兼容 IOS<11.2*/
    padding-bottom: env(safe-area-inset-bottom);
}

.commodity-submit-page .action .left {
    display: flex;
    align-items: center;
    flex: 1;
}

.commodity-submit-page .action .left text {
    font-size: 26rpx;
    font-weight: 500;
    color: #464B52;
    line-height: 26rpx;

}

.commodity-submit-page .action .left text:last-of-type {
    font-size: 36rpx;
    font-weight: bold;
    color: #FF5041;
    line-height: 36rpx;
}
.commodity-submit-page .action .null {
    background: #F5F5F5;
    color: #BEBEBE;

}
.commodity-submit-page .action button {
    height: 68rpx;
    line-height: 68rpx;
    background: #FF5041;
    font-size: 26rpx;
    color: #fff;
    font-weight: 500;
    width: 180rpx;
    padding: 0;
}