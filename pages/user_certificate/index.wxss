.certificate-page {
    background: #F7F7F7;
    min-height: 100vh;
}

.certificate-page .cover {
    height: 782rpx;
    width: 552rpx;
    margin: 0 auto;
    padding-top: 88rpx;
    margin-bottom: 102rpx;
}

.certificate-page .cover image {
    width: 100%;
    height: 100%;
}

.certificate-page .btn-action {
    display: flex;
    align-items: center;
    justify-content: center;
}

.certificate-page .btn-action button {
    background: var(--liner-bg-Color);
    padding: 0 38rpx;
    width: 180rpx;
    line-height: 76rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 26rpx;
    font-family: PingFang SC-Semibold, PingFang SC;
    font-weight: 600;
    margin: 0;
    margin-right: 40rpx;
}

.certificate-page .btn-action button:last-of-type {
    margin: 0;
}