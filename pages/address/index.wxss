.address-page {
    background: #F5F5F5;
    min-height: 100vh;
}

.address-page .item {
    background: #fff;
    padding: 32rpx 36rpx;
    margin-bottom: 36rpx;
    display: flex;
    align-items: center;
}

.address-page .item .edit {
    width: 32rpx;
    height: 32rpx;

}

.address-page .item .info {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.address-page .item .info .default {
    color: #fff;
    font-size: 20rpx;
    font-family: PingFang HK-Regular, PingFang HK;
    font-weight: 400;
    background: var(--themeColor);
    border-radius: 4rpx;
    width: 48rpx;
    height: 28rpx;
    line-height: 28rpx;
    display: inline-block;
    text-align: center;
    margin-right: 12rpx;
}

.address-page .item .info .name {
    font-size: 28rpx;
    font-family: PingFang HK-Medium, PingFang HK;
    font-weight: 500;
    color: #292A3D;
    display: flex;
    align-items: center;

}

.address-page .item .info .address {
    color: #464B52;
    font-size: 22rpx;
    font-family: PingFang HK-Regular, PingFang HK;
    font-weight: 400;
    display: inline-block;
    margin-top: 18rpx;
}

.add {
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50rpx 0;
}

.add image {
    width: 154rpx;
    height: 32rpx;
}

