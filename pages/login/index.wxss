.login-wrap {
  min-height: 100vh;
  background: #fff;
}


.logo-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
}

.logo-wrap image {
  width: 146rpx;
  height: 166rpx;
}

.logo-wrap text {
  font-size: 46rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  padding-top: 16rpx;
}

.login-wrap .action {
  margin-top: 538rpx;
}


.login-wrap .action button {
  width: 520rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07C160;
  font-size: 28rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding: 0;
  border-radius: 8rpx;
}


.login-wrap .action button:last-of-type {
  background: #F8F8F8 !important;
  color: #121314 !important;
  margin-top: 40rpx;
}

.phone-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 520rpx;
  margin: 0 auto;
  margin-top: 130rpx;

}

.phone-login input {
  background: #F8F8F8;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  padding: 0 20rpx;

}

.phone-login .code {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  background: #F8F8F8;
  width: 100%;
  border-radius: 8rpx;
}

.phone-login .code input {
  flex: 1;
  width: unset;
}

.phone-login .code button {
  border-radius: 4rpx;
  border: 1px solid #1FC9FF;
  color: #1FC9FF;
  background: transparent;
  padding: 0;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  width: unset;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 20rpx;
  margin-right: 8rpx;
}

.phone-login .login {
  border-radius: 8rpx;
  padding: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  background: #07C160;
  margin-top: 208rpx;
  width: 100%p;

}

.getphone-popup {
  width: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.getphone-popup text {
  padding: 30rpx 0;
  padding-top: 50rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}

.getphone-popup .btn-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  margin-top: 50rpx;
}

.getphone-popup .btn-wrap button {
  width: unset;
  flex: 1;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}

.getphone-popup .btn-wrap button:last-of-type {
  background: #07C160;
  color: #fff;
}


.phone-modal {
  background: #fff;
  width: 658rpx;
}

.phone-modal-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.phone-modal .title {
  font-size: 34rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  padding-top: 100rpx;
  display: inline-block;
}

.phone-modal .avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 80rpx;
}

.phone-modal .avatar image {
  width: 100%;
  height: 100%;
}

.phone-modal .name {
  padding-top: 28rpx;
  font-size: 34rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
}

.phone-modal .message {

  padding-top: 48rpx;
  padding-bottom: 86rpx;
  width: 552rpx;
  text-align: center;
}

.phone-modal .message  {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #576B95;
}

.phone-modal .btns {
  display: flex;
  align-items: center;
  padding-bottom: 100rpx;
}

.phone-modal .btns button {
  background: #F7F7F7;
  font-size: 34rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #07C160;
  width: 216rpx;
  padding: 0;
  height: 80rpx;
  line-height: 80rpx;
  
}

.phone-modal .btns button:last-of-type {
  margin-left: 90rpx;
  background: #07C160;
  color: #fff;
}